<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <size android:height="40dp" android:width="120dp" />
            <gradient android:startColor="#fff0f0f0" android:endColor="#fff0f0f0" android:angle="90.0" android:centerX="50%" android:centerY="50%" android:centerColor="#ff000000" />
            <stroke android:width="1dp" android:color="#ffffffff" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <size android:height="40dp" android:width="120dp" />
            <gradient android:startColor="#fff0f0f0" android:endColor="#fff0f0f0" android:angle="90.0" android:centerX="50%" android:centerY="50%" android:centerColor="#ffc5c5c5" />
            <stroke android:width="1dp" android:color="#ff646464" />
        </shape>
    </item>
</selector>
